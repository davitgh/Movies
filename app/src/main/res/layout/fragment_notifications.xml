<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dadada">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="#dfdfdf"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will notify you about featured trailers, new movies in in theatres, awards and events, and more. Update your notifications settings at any time."/>

        <Button
            android:id="@+id/btn_notify_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update notifications settings"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>